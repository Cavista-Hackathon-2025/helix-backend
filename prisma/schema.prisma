generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            BigInt          @id @default(autoincrement())
  name          String
  password      String
  provider      String          @default("Credentials")
  email         String
  phone         String
  country       String?
  dob           DateTime?
  age           Int?
  medicalInfos  MedicalInfo[]
  prescriptions Prescriptions[]
}

model MedicalInfo {
  id             BigInt   @id @default(autoincrement())
  weight         Int?
  height         Int?
  blood_pressure String?
  alergies       String[]
  history        String[]
  user           User     @relation(fields: [userId], references: [id])
  userId         BigInt
}

model Prescriptions {
  id        BigInt     @id @default(autoincrement())
  drugName  String
  dates     DateTime[]
  frequency String
  user      User       @relation(fields: [userId], references: [id])
  userId    BigInt
}

model SymptomAnalysis {
  id       BigInt  @id @default(autoincrement())
  diets    Json
  advice   Json
  response String  @db.Text
  title    String?
}
